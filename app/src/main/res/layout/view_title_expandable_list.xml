<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layoutDirection="rtl"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_indicator_expandable"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        tools:src="@drawable/ic_arrow_left">

    </ImageView>

    <TextView
        android:id="@+id/txv_titleExpandable_expandableList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4dp"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="?textColorHigh"
        android:textStyle="bold"
        tools:text="@string/howAddMyDateInChart_exvTitle_help" />
</LinearLayout>