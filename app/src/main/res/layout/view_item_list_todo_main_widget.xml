<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lnl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_deleteItem_itemListTodoMainWidget"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:src="@drawable/ic_delete" />

    <TextView
        android:id="@+id/txv_endTo_itemListTodoMainWidget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        tools:text="15:24" />



    <TextView
        android:id="@+id/txv_startFrom_itemListTodoMainWidget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:textSize="12sp"
        android:gravity="start"
        android:textColor="@android:color/black"
        tools:text="15:24" />

    <TextView
        android:id="@+id/txv_taskTitle_itemListTodoMainWidget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/black"
        tools:text="این یک تست است این یک تست است" />

    <ImageView
        android:id="@+id/img_checkBox_itemListTodoMainWidget"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_checkbox_not_checked" />


</LinearLayout>