<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layoutDirection="ltr">

    <ImageView
        android:id="@+id/img_deleteItem_itemListTodoMainWidget"
        android:layout_width="13dp"
        android:layout_height="13dp"
        tools:src="@drawable/ic_gray_delete" />

    <TextView
        android:id="@+id/txv_endTo_itemListTodoMainWidget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center"
        tools:textColor="@color/gray_textColor"
        android:textSize="12sp"
        tools:text="15:24" />


    <TextView
        android:id="@+id/txv_startFrom_itemListTodoMainWidget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:gravity="start"
        tools:textColor="@color/gray_textColor"
        android:textSize="12sp"
        tools:text="15:24" />

    <TextView
        android:id="@+id/txv_taskTitle_itemListTodoMainWidget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:gravity="center"
        tools:textColor="@color/gray_textColor"
        android:textStyle="bold"
        tools:text="این یک تست است این یک تست است" />

    <ImageView
        android:id="@+id/img_checkBox_itemListTodoMainWidget"
        android:layout_width="16dp"
        android:layout_height="16dp"
        tools:src="@drawable/ic_gray_checkbox_not_checked" />


</LinearLayout>