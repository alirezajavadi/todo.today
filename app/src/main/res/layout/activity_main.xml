<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tlb_toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/bgHeaderFooter_notPressed" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tlb_toolbar_main"
        android:fillViewport="true"
        android:scrollbars="none">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txv_descriptionSelectDate_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="@string/descriptionMain_main"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:visibility="visible" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cdv_containerSelectDate_main"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_below="@id/txv_descriptionSelectDate_main"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cdv_containerSelectDateClosed_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <TextView
                        android:id="@+id/txv_openContainerSelectDate_main"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/selector_bg_footer"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/titleSelectDateClosed_main"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/lnl_containerViewsSelectDateOpen_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_bg_header_main_widget"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="@string/titleSelectDateOpen_main"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/view" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txv_selectDateFrom_main"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/selector_bg_item"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/tapHere"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="@string/selectDateFrom_main"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/view" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/txv_selectDateTo_main"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/selector_bg_item"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/tapHere"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/selectDateTo_main"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/view" />

                    <TextView
                        android:id="@+id/txv_okSelectedDate_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_bg_footer"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/okSelectDate_main"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/cdv_containerSelectDate_main"
                android:background="@color/view" />


            <TextView
                android:id="@+id/txv_descriptionDoneJobChart_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cdv_containerSelectDate_main"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="@string/descriptionDoneChart_main"
                android:textColor="@android:color/black"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/txv_descriptionAxisDoneJobChart_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txv_descriptionDoneJobChart_main"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/descriptionAxisChart_main"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart_doneJob_main"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_below="@id/txv_descriptionAxisDoneJobChart_main"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/barChart_doneJob_main"
                android:background="@color/view" />


            <TextView
                android:id="@+id/txv_descriptionUndoneJobChart_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/barChart_doneJob_main"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="@string/descriptionUnDoneChart_main"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txv_descriptionAxisUndoneJobChart_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txv_descriptionUndoneJobChart_main"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/descriptionAxisChart_main"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart_undoneJob_main"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_below="@id/txv_descriptionAxisUndoneJobChart_main"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp" />
        </RelativeLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/tlb_toolbar_main"
        android:background="@drawable/shape_toolbar_shadow" />
</RelativeLayout>
